{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=YOUR_HOST;Port=YOUR_PORT;Database=YOUR_DATABASE;Username=YOUR_USERNAME;Password=YOUR_PASSWORD"
  },
  "Jwt": {
    "Key": "YOUR_SECRET_KEY_HERE_MINIMUM_32_CHARACTERS",
    "Issuer": "MIBO.ApiGateway",
    "Audience": "MIBO.Services",
    "ExpirationHours": 1
  },
  "Services": {
    "CalendarAgent": "http://calendar-agent:80",
    "ConversationService": "http://conversation-service:80",
    "VisualisationService": "http://visualisation-service:80",
    "AppHost": "http://app-host:80",
    "IdentityService": "http://identity-service:80"
  }
}