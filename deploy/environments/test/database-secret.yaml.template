# Database Secret Template
# DO NOT COMMIT ACTUAL CREDENTIALS TO GIT
#
# To create the secret in Kubernetes, run:
# kubectl create secret generic database-secret \
#   --from-literal=connection-string="Host=YOUR_HOST;Port=YOUR_PORT;Database=YOUR_DB;Username=YOUR_USER;Password=YOUR_PASSWORD;SslMode=Require;Trust Server Certificate=true;Pooling=true;Maximum Pool Size=20;Connection Idle Lifetime=300" \
#   -n test
#
# Or use this template with your actual values:

apiVersion: v1
kind: Secret
metadata:
  name: database-secret
  namespace: test
type: Opaque
stringData:
  connection-string: "Host=YOUR_DB_HOST;Port=25060;Database=mibo_identity_test;Username=YOUR_USERNAME;Password=YOUR_PASSWORD;SslMode=Require;Trust Server Certificate=true;Pooling=true;Maximum Pool Size=20;Connection Idle Lifetime=300"
  db-host: "YOUR_DB_HOST"
  db-port: "25060"
  db-name: "mibo_identity_test"
  db-user: "YOUR_USERNAME"
  db-password: "YOUR_PASSWORD"